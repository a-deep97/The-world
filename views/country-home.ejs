    <section id="main-section">
        <div id="intro-section">
            <div id="heading">
            </div>
            <div id="edit">
                <a href="/country/<%= countryData.id %>/edit">Edit</a>
            </div>
        </div>
        <div id="main-container">
            <aside id="left-aside">
                <div id="show-hide-button">S</div>
