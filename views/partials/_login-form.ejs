<form action="/login" method="POST" id="login-form">
    <div class="form-containers" id="error-container"><%= messages.error %> </div>
    <div class="form-containers" id="email-container">
        <label class="form-label" for="email-input" id="email-label">Email address</label>
        <input class="form-input" type="text" name="email" id="email-input">
    </div>
    <div class="form-containers" id="password-container">
        <label class="form-label" for="password-input" id="password-label">Password</label>
        <input class="form-input" type="password" name="password" id="password-input">
        <div id="forgot-password-container">
            <a href="">Forgot password</a>
        </div>
    </div>
    <div class="form-containers" id="button-container">
        <button type="submit">Login</button>
    </div>
</form>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Black+Ops+One&display=swap');
    
    :root{
        --font1 : 'Roboto', sans-serif;
        --font2 : 'Black Ops One', cursive;
    }
    #login-form{
        display: flex;
        justify-content: center;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 90%;
    }
    .form-containers{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 90%;
        margin: 10px 0px;
    }
    #password-container a{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 20px;
        font-size: 1rem;
        color: white;
    }
    .form-label{
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        height: 40px;
        font-size: 1.5rem;
        color: white;
        font-family: var(--font1);
    }
    .form-input{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 95%;
        height: 30px;
        border: solid 2px black;
        border-radius: 10px;
    }
    #button-container{
        display: flex;
        justify-content: center;
        align-items: center;
        width: 95%;
        height: 35px;
    }
    #button-container button{
