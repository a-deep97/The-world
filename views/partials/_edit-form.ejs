<div id="topic">
    <div id="name-container">
        <div id="primary-name-container"> 
            <input id="primary-name" type="text" name="primary-name" value="<%= countryData.name %> ">
        </div>
        <div id="official-name-container">
            <input id="official-name" type="text" name="official-name" value="<%= countryData.official_name %> ">
        </div>
    </div>
    <div id="symbol-container">
        <div id="flag-container">
            <p>Flag of the country not available right now</p>
        </div>
        <div id="emblem-container">
            <p>Emblem of the country not available right now</p>
        </div>
    </div>
</div>
<div id="description-container">
