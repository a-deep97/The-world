<div id="topic">
    <div id="identity-container">
        <div id="name-container">
            <div id="primary-name-container"> 
                <div id="primary-name"><%= countryData.name %> </div>
            </div>
            <div id="official-name-container">
                <input class="fact-value" id="official-name" type="text" name="official_name" value="<%= countryData.official_name %> ">
            </div>
        </div>
        <div id="symbol-container">
            <div id="national-flag-container">
                <div id="national-flag-img">
                    <img src="/img/flags2/<%= countryData.code.toLowerCase() %>.png" alt="">
                </div>
            </div>
            <div id="national-emblem-container">
                <div id="emblem-img"></div>
                <div id="emblem-name"></div>
            </div>
        </div>
        <div class="facts" id="motto-container">
            <div class="fact-label" id="motto-label">Motto : </div>
            <input class="fact-value" id="motto" type="text" name="motto" value="<%= countryData.motto %> ">
        </div>
        <div id="national-anthem-container">
            <div class="facts" id="national-anthem-name-container">
                <div class="fact-label" id="national-anthem-label">National Anthem :</div>
                <input class="fact-value" id="national-anthem-local-value" type="text" name="national_anthem_local" value="<%= countryData.national_anthem_local %> ">
                <input class="fact-value" id="national-anthem-english-value" type="text" name="national_anthem_english" value="<%= countryData.national_anthem_english %> ">
            </div>
            <div id="national-anthem-media">
                <div id="anthem-play-button"></div>
                <div id="status-anthem-status-bar"></div>
                <div id="anthem-time-status"></div>
            </div>
        </div>
        <div class="facts" id="national-song-container">
            <div class="fact-label" id="national-song-label">National Song :</div>
            <input class="fact-value" id="national-song-value" type="text" name="national_song" value="<%= countryData.national_song %> ">
        </div>
    </div>
    <div id="map-container">
        <div id="country-on-gmap">
            <label class="fact-label" for="capital-latitude">Latitude of the capital city: <input class="fact-value" id="capital-latitude" type="text" name="capital_latitude" value="<%= countryData.capital_coordinates[0] %> "></label>
            <label class="fact-label" for="capital-longitude">Longitude of the capital city: <input class="fact-value" id="capital-longitude" type="text" name="capital_longitude" value="<%= countryData.capital_coordinates[1] %> "></label>
        </div>
    </div>
</div>
<div id="description-container">
    <input type="text" id="description" name="description" value="<%= countryData.description %> ">  
</div>
